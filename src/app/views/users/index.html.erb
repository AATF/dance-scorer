<% @title = "Users" %>
<% @header = "Users" %>

<table class="table">
  <tr>
    <th>Username</th>
    <th>Name</th>
    <% if @current_user.admin? %>
      <th>Admin</th>
      <th>Edit User</th>
      <th>Delete User</th>
    <% end %>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.name %></td>
      <% if @current_user.admin? %>
        <td><%= user.admin? %></td>
        <td><%= link_to "Edit User", edit_user_path(user.id) %></td>
        <td><%= link_to "Delete User", user_path(user.id), method: :delete, data: { confirm: "Are you sure you want to delete #{user.username}?" } %></td>
      <% end %>
    </tr>
  <% end %>
</table>
