<% @title = "Dancer Info" %>
<% @header = "Dancer Info for #{@dancer.name}" %>

<table class="table">
  <tr>
    <th>Group</th>
    <th>Dancer Name</th>
  </tr>
    <tr>
      <td><%= @dancer.group.name %></td>
      <td><%= @dancer.dance_name %></td>
    </tr>
</table>

<% if @current_user.admin? %>
  <%= render "scores/table", scores: @dancer.scores %>
<% else %>
  <%= render "scores/table", scores: [@dancer.scores.find_by(user_id: @current_user.id)] %>
<% end %>

<% if @current_user.admin? %>
  <%= link_to "Edit Scores", edit_admin_score_path(@dancer.id) %>
<% else %>
  <%= link_to "Edit Scores", edit_score_path %>
<% end %>
