<% @title = "Login" %>
<% @header = "Login" %>

<%= form_tag(sessions_path, class: "form-group") do %>
    <%= text_field(:session, :username, class: "form-control", placeholder: "Username") %>

    <%= password_field(:session, :password, class: "form-control", placeholder: "Password") %>

    <%= submit_tag("Submit") %>
<% end %>
